extends ../_layout

block content  
  .container
    .row.centered-form
      .col-xs-12.col-sm-8.col-md-4.col-sm-offset-2.col-md-offset-4
        .panel.panel-default
          .panel-heading
            h3.panel-title Login to your account
          .panel-body
            form(role='form')
              .form-group
                input#email.form-control.input-sm(type='email', name='email', placeholder='Username')
              .form-group
                input#email.form-control.input-sm(type='email', name='email', placeholder='Password')
              input.btn.btn-info.btn-block(type='submit', value='Login')