extends ../_layout

block content  
  .container
    .row.centered-form
      .col-xs-12.col-sm-8.col-md-4.col-sm-offset-2.col-md-offset-4
        .panel.panel-default
          .panel-heading
            h3.panel-title Make a reservation
          .panel-body
            form(role='form' action="/reservation" method="post")
              .form-group
                select.form-control.input-sm
                    option(value='Maharani') Maharani
                    option(value='Vila Maharani') Vila Maharani
              .form-group
                input.form-control.input-sm(type='text', name='peope', placeholder='Number of people')
              .form-group
                input.form-control.input-sm(type='text', name='time', placeholder='Time(hh:mm)')
              input.btn.btn-info.btn-block(type='submit', value='Make')