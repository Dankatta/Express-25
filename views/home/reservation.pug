extends ../_layout

block content
  if result.user 
    if result.user.role
      #reservations
        ul
          each reservation in reservations
            li
              h2 People:
                =reservation._people
              h2 Place:
                =reservation._place
              h2 Time:
                =reservation._time
              h2 Date:
                =reservation._date  
              h2 Name:
                =reservation._name
              h2 Phone Number:
                =reservation._number
                
    else
    button.btn.btn-primary(type='button', onclick='myFunction()') Create Reservation
    #myDIV(style='display: none;')
      .container
        .row.centered-form
          .col-xs-12.col-sm-8.col-md-4.col-sm-offset-2.col-md-offset-4
            .panel.panel-default
              .panel-heading
                h3.panel-title Make a reservation
              .panel-body
                form(role='form' action="/reservation" method="post")
                  .form-group
                    select#place.form-control.input-sm(name='place')
                      option(value='Maharani', name='place') Maharani
                      option(value='Vila Maharani', name='place') Vila Maharani
                  .form-group
                    input#people.form-control.input-sm(type='text', name='people', placeholder='Number of people')
                  .form-group
                    input#people.form-control.input-sm(type='text', name='name', placeholder='Name')
                  .form-group
                    input#people.form-control.input-sm(type='text', name='number', placeholder='Phone number')
                  .form-group
                    input#time.form-control.input-sm(type='text', name='time', placeholder='Time(hh:mm)')
                  .form-group
                    input#time.form-control.input-sm(type='text', name='date', placeholder='Date')
                  input.btn.btn-info.btn-block(type='submit', value='Make')
   
  else
    #res
      ul
        li
          h1 Please Log In in order to make a reservation.
  script(src="./static/scripts/expand-form.js")
  script(src="./libs/socket.io-client/dist/socket.io.js")